# DeviceWatch Backend Environment Configuration
# Copy this file to .env and update the values

# Application
APP_NAME=DeviceWatch
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API
API_V1_STR=/api/v1
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://devicewatch:devicewatch123@localhost:5432/devicewatch

# Redis
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_HOSTS=["*"]

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# Device Simulator
SIMULATOR_DEVICE_COUNT=10
SIMULATOR_FAILURE_RATE=0.05
SIMULATOR_SCENARIO=mixed

# Health Scoring Weights
HEALTH_CPU_WEIGHT=0.25
HEALTH_RAM_WEIGHT=0.25
HEALTH_TEMP_WEIGHT=0.30
HEALTH_DISK_WEIGHT=0.15
HEALTH_CONNECTIVITY_WEIGHT=0.05

# Alert Settings
ALERT_DEFAULT_DURATION_MINUTES=5
ALERT_MAX_CONDITIONS=5

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
